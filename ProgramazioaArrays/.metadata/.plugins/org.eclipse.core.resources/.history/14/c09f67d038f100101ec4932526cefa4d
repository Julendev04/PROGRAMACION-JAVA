package Arrays;

public class Ordenatu {

    public static void main(String[] args) {

        System.out.println("Sartu nahi duzun zenbakia:");
        int erantzuna = Kontsola.irakurriInt();

        int[] arr = new int[10];

        for (int i = 0; i < 5; i++) {
            arr[i] = 10 * i;
        }

        int pos = posizioaAtera(arr, erantzuna);

        for (int i = 0; i < arr.length; i++) {
            System.out.print(arr[i] + "\t");
        }
    }

    public static int posizioaAtera(int[] arr, int erantzuna) {
        int pos = 0;

        for (int i = 0; i < 5; i++) {
            if (arr[i] < erantzuna) {
                pos = i + 1;
            }
        }

        return pos;
    }
}

