package UD6_Tanda1;

import java.util.Iterator;

import Arrays.Kontsola;

public class Ariketa1 {
	static final int N = 4;
	public static double batazbestekoa(int[] notak) {
		int batura=0;
		for (int i = 0; i < notak.length; i++) {
			batura=batura+notak[i];
		}
		return (double)batura/notak.length;
		
	}
	
	public static void main(String[] args) {
		int [] notak;
		notak=new int[N];
		for (int i = 0; i < notak.length; i++) {
			System.out.println("Sartu ikasle honen "+(i+1)+". nota:");
			notak[i]=Kontsola.irakurriInt();
			if (notak[i]<0 || notak[i]>10) {
				System.out.println("Hau ez da baliozko nota. Berriz sartu: ");
				notak[i]=Kontsola.irakurriInt();
			}
		}
		System.out.println(notak);
		for (int i = 0; i < notak.length; i++) {
			System.out.print(notak[i]+"\t");
			
		}
		
		int max=0;
		int kont_max=0;
		for (int i = 0; i < notak.length; i++) {
			if (notak[i]>max) {
				max=notak[i];
				kont_max=1;
			} else if (notak[i]==max) {
				kont_max++;
			}
			
		}
		int kon=0;
		double media=batazbestekoa(notak);
		for (int i = 0; i < notak.length; i++) {
			if (notak[i]>media) {
				kon++;
			}		
		}
		double nota_gain=((double)kon/notak.length)*100;
		System.out.println("Batazbestekoa gainditzen duten noten ehunekoa = "+nota_gain);
		System.out.println("Noten media: "+media);
		System.out.println("Gehieneko nota: "+max+" | "+kont_max+" aldiz agertzen da");
		
	}

}
