package Arrays;

public class Ikaslea {
	private String izena;
	private int adina;
	private float[] notak;
	
	public Ikaslea(String izena, int adina) {
		this.izena=izena;
		this.adina=adina;
		notak=new float[0];
	}
	
	public Ikaslea(String izena, int adina, float[] notak) {
		this.izena=izena;
		this.adina=adina;
		this.notak=notak;
	}
	
	public void erakutsi() {
		System.out.println("Ikaslea: "+izena+", adina: "+adina+" eta hauek bere notak: ");
		for (int i = 0; i < notak.length; i++) {
			System.out.println(notak[i]+"\t");
		}
	}
	public static void main(String[] args) {
		Ikaslea ik1=new Ikaslea("Maite", 21);
		ik1.erakutsi();
		float[] notak= {2,4,6,5,7};
		Ikaslea ik2=new Ikaslea("Asier", 22, notak);
		ik2.erakutsi();
	}

}
