package Arrays;

public class Ordenatu {

    public static void main(String[] args) {

        int[] arr = new int[10];
        for (int i = 0; i < 5; i++) {
            arr[i] = 10*i;
        }

        int tam = 5;
        System.out.println("Sartu nahi duzun zenbakia:");
        int zenbakia=Kontsola.irakurriInt();
        for (int i = 0; i<5; i++) {
            System.out.print(arr[i] + "\t");
        }
        int posizioa = PosizioaAtera(arr, zenbakia, tam);
        System.out.println("Zenbakia sartu behar den posizioa: " + posizioa);
    }

    public static int PosizioaAtera(int[] arr, int numero, int tam) {
        for (int i=0; i<tam; i++) {
            if (numero<arr[i]) {
                return i;
            }
        }
        return tam;
    }
}

